<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="paytr_iframe" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="4">
                <label>PayTR Virtual POS</label>
                <fieldset_css>complex paytr-section</fieldset_css>
                <frontend_model>Paytr\Payment\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
                <comment>Open your web site to shopping with the advantages of PayTR. Take your payments securely.</comment>
                <attribute type="activity_path">payment/paytr_iframe/active</attribute>
                <attribute type="displayIn">recommended_solutions</attribute>
                <field id="paytr_notification_url" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Notification URL Address</label>
                    <frontend_model>Paytr\Payment\Block\Adminhtml\System\Config\Fieldset\NotificationUrl</frontend_model>
                    <comment model="Paytr\Payment\Model\Adminhtml\System\Config\PaytrNotificationUrlComment"/>
                </field>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Payment Area Title</label>
                    <frontend_class>required-entry</frontend_class>
                </field>
                <field id="merchant_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Merchant ID</label>
                    <frontend_class>required-entry validate-number</frontend_class>
                </field>
                <field id="merchant_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Merchant Key</label>
                    <frontend_class>required-entry alphanumeric</frontend_class>
                </field>
                <field id="merchant_salt" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Merchant Salt</label>
                    <frontend_class>required-entry alphanumeric</frontend_class>
                </field>
                <field id="timeout_limit" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Timeout Limit</label>
                    <frontend_class>required-entry validate-number</frontend_class>
                </field>
                <field id="debug_on" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="test_mode" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="iframe_v1" translate="iframe_v1" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>IFrame V1</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If 'No' is selected, it means it works on IFrame v2.</comment>
                </field>
                <field id="iframe_v2_dark" translate="iframe_v2_dark" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Dark Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Dark mode is only supported in IFrame v2.</comment>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Method Order</label>
                    <frontend_class>required-entry validate-number</frontend_class>
                </field>
                <field id="paytr_logo" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show PayTR Logo?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="categoryinstallment" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Installment Settings</label>
                    <frontend_model>Paytr\Payment\Block\Adminhtml\Form\Field\CategoryInstallment</frontend_model>
                    <backend_model>Paytr\Payment\Model\Adminhtml\System\Config\CategoryInstallment</backend_model>
                    <config_path>payment/paytr_iframe/categoryinstallment</config_path>
                </field>
                <field id="installment_table_tab" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Installment Table?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment model="Paytr\Payment\Model\Adminhtml\System\Config\InstallmentTableTabComment"/>
                </field>
                <field id="installment_table_show_all" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show All Installment Options On The Ä°nstallment Table?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment model="Paytr\Payment\Model\Adminhtml\System\Config\InstallmentTableShowAllComment"/>
                </field>
                <field id="installment_table_token" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Installment Table Token</label>
                    <comment model="Paytr\Payment\Model\Adminhtml\System\Config\InstallmentTableTokenComment"/>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
